    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "lint-staged": "15.2.10",
    "postcss": "8.4.49",
    "prettier": "3.3.3",
    "prettier-plugin-tailwindcss": "0.6.9",
    "tailwindcss": "3.4.15",
    "typescript": "5.4.2"
  },
  "lint-staged": {
    "*.{js,ts,tsx,css,md}": "prettier --write"
  },
  "engines": {
    "node": "20"
  },
  "resolutions": {
    "string-width": "4.2.3",
    "wrap-ansi": "7.0.0"
  }
