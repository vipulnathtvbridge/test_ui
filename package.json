    "@axe-core/playwright": "^4.10.2",
    "@playwright/test": "^1.55.0",
    "@tailwindcss/typography": "^0.5.15",
    "@testing-library/dom": "^10.0.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "14.5.2",
    "@types/jest": "29.5.14",
    "@types/node": "^24.0.15",
